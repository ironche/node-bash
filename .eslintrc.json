{
  "root": true,
  "env": {
    "jasmine": true,
    "browser": false,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jasmine/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "plugins": [
    "jasmine",
    "prettier"
  ],
  "rules": {
    "jasmine/no-expect-in-setup-teardown": "off",
    "prettier/prettier": "error"
  }
}
