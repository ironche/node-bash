{
  "name": "@ironche/node-bash",
  "version": "1.1.0",
  "description": "bash-like commands in nodejs",
  "keywords": [
    "bash",
    "shell",
    "commands"
  ],
  "homepage": "https://github.com/ironche/node-bash#readme",
  "license": "ISC",
  "author": "Milos Manojlovic",
  "repository": {
    "type": "git",
    "url": "https://github.com/ironche/node-bash.git"
  },
  "scripts": {
    "start": "npm run lint && npm test",
    "build": "npm run lint && npm test && gulp build",
    "test": "jasmine --config=jasmine.json",
    "lint": "eslint gulpfile.esm.js/** src/**",
    "lint:fix": "npm run lint -- --fix",
    "bump": "npm version",
    "postbump": "git push && git push --tags",
    "bump:patch": "npm run bump -- patch",
    "bump:minor": "npm run bump -- minor",
    "bump:major": "npm run bump -- major",
    "predeploy": "npm run build",
    "deploy": "npm publish dist --access public",
    "deploy:test": "npm run deploy -- --dry-run",
    "pretarball": "npm run build",
    "tarball": "npm pack ./dist",
    "tarball:test": "npm run tarball -- --dry-run"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jasmine": "^4.1.1",
    "eslint-plugin-prettier": "^3.1.4",
    "esm": "^3.2.25",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-uglify": "^3.0.2",
    "husky": "^4.3.0",
    "jasmine": "^3.6.3",
    "prettier": "^2.2.0"
  }
}
